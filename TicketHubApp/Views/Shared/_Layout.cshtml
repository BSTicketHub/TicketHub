                        <div class="f-item">
                            <div class="icon">
                                <span class="iconify" data-icon="fa-solid:ticket-alt" data-inline="false"
                                      style="font-size: 48px; color:#ffffff"></span>
                            </div>
                            <div class="text">
                                <h5>票劵資訊</h5>
                                <hr>
                                <a href="">瀏覽紀錄</a>
                                <a href="">訂單查詢</a>
                                <a href="">消費者登入</a>
                                <a href="">票劵使用紀錄</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="f-item">
                            <div class="icon">
                                <img src="/Assets/Images/Home/ticketHub.png" alt="">
                            </div>
                            <div class="text-mb">
                                <h4>TicketHub</h4>
                                <div class="btns">
                                    <button>
                                        <span class="iconify" data-icon="ant-design:twitter-outlined"
                                              data-inline="false" style="margin-top: -8px;"></span>
                                    </button>
                                    <button>
                                        <span class="iconify" data-icon="bx:bxl-facebook" data-inline="false"
                                              style="margin-top: -8px;"></span>
                                    </button>
                                    <button>
                                        <span class="iconify" data-icon="bx:bxl-pinterest-alt" data-inline="false"
                                              style="margin-top: -8px;"></span>
                                    </button>
                                    <button>
                                        <span class="iconify" data-icon="bx:bxl-linkedin" data-inline="false"
                                              style="margin-top: -8px;"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footbar">
            <p>Copyright © 2020 TicketHub</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/js/jquery")
    @Scripts.Render("~/bundles/js/bootstrap")
    @Scripts.Render("~/bundles/js/iconify")
    @Scripts.Render("~/bundles/js/momentjs")
    @Scripts.Render("~/bundles/js/Home")


    @RenderSection("scripts", required: false)
</body>
</html>
