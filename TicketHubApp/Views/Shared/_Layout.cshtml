<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/Assets/Images/Home/ticketHub.png" rel="shortcut icon" type="image/ico">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/css/bootstrap")
    @Styles.Render("~/bundles/css/Site")
    @Scripts.Render("~/bundles/js/modernizr")
    @Styles.Render("~/bundles/css/Home")
    @RenderSection("topCSS", required: false)
</head>
<body>
    <div class="top-bar d-flex justify-content-between">
        <div class="text-left d-flex">
            <a class="text-white d-flex align-items-center" href="tel:02-23457778" title="phone">
                <span class="iconify mr-1" data-icon="fa-solid:phone-alt" data-inline="false"></span>
                (123) 456-7890
            </a>
            <a class="text-white d-flex align-items-center" href="/Home/Contact" title="">
                <span class="iconify mr-1" data-icon="clarity:user-solid" data-inline="false"></span>
                客服資訊
            </a>
        </div>
        <div class="text-right">
            <a class="text-white d-flex align-items-center" href="/Home/About" title="">
                <span class="iconify mr-1" data-icon="carbon:user-speaker" data-inline="false"></span>
                關於我們
            </a>
        </div>
    </div>
    @Html.Partial("_Navbar")
    <div class="modal fade" id="CartModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">刪除商品</h5>
                    <button type="button" class="close btn" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="cart-group deleteInfo" id="cart_delete_item">
                    </div>
                </div>
            </div>
        </div>
    </div>

    @RenderBody()

    <footer>
        @Html.Partial("_Footer")
    </footer>

    @Scripts.Render("~/bundles/js/jquery")
    @Scripts.Render("~/bundles/js/bootstrap")
    @Scripts.Render("~/bundles/js/iconify")
    @Scripts.Render("~/bundles/js/momentjs")
    @Scripts.Render("~/bundles/js/Home")

    @RenderSection("scripts", required: false)
    @RenderSection("endCSS", required: false)
    @RenderSection("endJS", required: false)

</body>
</html>
