<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 應用程式</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/chart")
    @RenderSection("topCSS", required:false)
    @RenderSection("topJS", required:false)

    <link href="~/Assets/CSS/StoreBasic.css" rel="stylesheet" />
</head>
<body style="background-color: #fafafa;">
    <nav class="navbar navbar-expand-lg navbar-light bg-light bg-white mb-3" style="border-bottom: 15px solid #26bcc7;">
        <div class="container">
            <a class="navbar-brand mr-1" href="#" style="color:#26bcc7; font-weight: 900;">TicketHub</a>
            <span>賣家中心</span>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <form class="form-inline my-2 my-lg-0 ml-auto">
                    <input class="form-control mr-sm-2 search" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn border my-2 my-sm-0 search" type="submit">
                        <span class="iconify" data-icon="bi:search" data-in line="false"></span>
                    </button>
                </form>
                <ul class="navbar-nav">
                    <li class="nav-item mr-4 ml-5 bluehover iconscale">
                        <span class="iconify img-fluid" data-icon="fa-solid:th" data-inline="false"></span>
                    </li>
                    <li class="nav-item bluehover iconscale">
                        <span class="iconify" data-icon="bi:bell" data-inline="false"></span>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container">
        <div class="row">
            <div class="sidebar col-2 border text-left px-0 position-sticky" style="top: 0px;height:600px">
                <div class="border-bottom text-center" style="height: 100px; line-height: 100px;">Build School Logo</div>
                <div class="div" data-toggle="collapse" aria-controls="storeManegement" data-target="#storeManegement">
                    <span class="iconify" data-icon="zmdi:store" data-inline="false"></span>
                    <span>商家管理</span>
                    <span class="iconify ml-5" data-icon="ic:outline-keyboard-arrow-down" data-inline="false"></span>
                </div>
                <div class="collapse" id="storeManegement">
                    <ul>
                        <li>@Html.ActionLink("商家資訊", "StoreInformation", "Store", null, new { @class="liColor pl-5" })</li>
                    </ul>
                </div>
                <div class="div" data-toggle="collapse" aria-controls="orderManegement" data-target="#orderManegement">
                    <span class="iconify" data-icon="ion:newspaper-sharp" data-inline="false"></span>
                    <span >訂單管理</span>
                    <span class="iconify ml-5" data-icon="ic:outline-keyboard-arrow-down" data-inline="false"></span>
                </div>
                <div class="collapse" id="orderManegement">
                    <ul>
                        <li>@Html.ActionLink("訂單查詢", "OrderList", "Store", null, new { @class = "liColor pl-5" })</li>
                    </ul>
                </div>
                <div class="div" data-toggle="collapse" aria-controls="productManegement" data-target="#productManegement">
                    <span class="iconify" data-icon="carbon:ticket" data-inline="false"></span>
                    <span>商品管理</span>
                    <span class="iconify ml-5" data-icon="ic:outline-keyboard-arrow-down" data-inline="false"></span>
                </div>
                <div class="collapse" id="productManegement">
                    <ul>
                        <li>@Html.ActionLink("票券上架", "CreateProduct2", "Store", null, new { @class = "liColor pl-5" })</li>
                        <li>@Html.ActionLink("票券列表", "ProductList", "Store", null, new { @class = "liColor pl-5" })</li>
                        <li>@Html.ActionLink("歷史票券", "ProductList", "Store", null, new { @class = "liColor pl-5" })</li>
                    </ul>
                </div>
                <div class="div" data-toggle="collapse" aria-controls="sellingAnalysis" data-target="#sellingAnalysis">
                    <span class="iconify" data-icon="carbon:text-link-analysis" data-inline="false"></span>
                    <span>銷售分析</span>
                    <span class="iconify ml-5" data-icon="ic:outline-keyboard-arrow-down" data-inline="false"></span>
                </div>
                <div class="collapse" id="sellingAnalysis">
                    <ul>
                        <li>銷售排行</li>
                        <li>圖表分析</li>
                    </ul>
                </div>
            </div>
            <div class="col-10">
                <div class="catalogue border text-secondary" style="height: 30px;">
                    <span class="iconify" data-icon="fa:home" data-inline="false"></span>
                    <span> / </span>
                    <span>商店</span>
                </div>
                <div class="renderbody mt-2 border">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/umd/popper.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Assets/Javascript/StoreBasic.js"></script>
    <script src="https://code.iconify.design/1/1.0.7/iconify.min.js"></script>
    @RenderSection("endCSS", required:false)
    @RenderSection("endJS", required:false)
</body>
</html>
