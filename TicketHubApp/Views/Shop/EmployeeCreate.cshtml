
<nav aria-label="breadcrumb" class="shadow">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Shop/Index">商家管理系統</a></li>
        <li class="breadcrumb-item"><a href="~/Shop/EmployeeList">員工管理</a></li>
        <li class="breadcrumb-item active" aria-current="page">新增員工</li>
    </ol>
</nav>

@using (Html.BeginForm())
{
    @*@Html.AntiForgeryToken()*@

    <div class="container employCreate">
        <div class="row justify-content-center">
            <div class="col-8 bg-white shadow p-4">
                <div>
                    <label class="m-0">帳號 : </label>
                    <input type="text" id="inputAccount" name="account" placeholder="請輸入現有帳號" />
                    <button class="btn blueBtn mb-1" id="search" type="button">確認帳號</button>
                </div>
                <div class="col-8 border my-5 p-0 bg-light">
                    <div class="d-flex border-bottom border-white">
                        <div class="col-3 text-right border-right border-white p-0">
                            <p class="my-2 ml-2">員工帳號 : </p>
                        </div>
                        <div class="col-8">
                            <p id="account" class="m-2"></p>
                        </div>
                    </div>
                    <div class="d-flex border-bottom border-white">
                        <div class="col-3 text-right border-right border-white p-0">
                            <p class="my-2 ml-2">性名 : </p>
                        </div>
                        <div class="col-8">
                            <p id="name" class="m-2"></p>
                        </div>
                    </div>
                    <div class="d-flex border-bottom border-white">
                        <div class="col-3 text-right border-right border-white p-0">
                            <p class="my-2 ml-2">手機號碼 : </p>
                        </div>
                        <div class="col-8">
                            <p id="phone" class="m-2"></p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="col-3 text-right border-right border-white p-0">
                            <p class="my-2 ml-2">性別 : </p>
                        </div>
                        <div class="col-8">
                            <p id="gender" class="m-2"></p>
                        </div>
                    </div>
                </div>
                <div class="btnList p-0">
                    <button id="submit" class="btn blueBtn" type="button">新增員工</button>
                    <span id="message" class="text-danger ml-3"></span>
                </div>
            </div>
        </div>
    </div>
}

@section topCSS{
    <link href="~/Assets/CSS/Shop/Shop.min.css" rel="stylesheet" />
}

@section endJS{
    <script src="~/Assets/JavaScript/Shop/EmployeeCreate.js"></script>
}