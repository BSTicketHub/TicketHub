
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/bundles/css/CustomerPage")
@section topCSS{
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}



<div class="container">
    <div class="row">
        <div class="col-3 sidebar pb-3">
            <div class="img-area bg-white my-3 pt-3 d-flex flex-column rounded">
                <div class="img mx-auto">
                    <div class="camera d-flex justify-content-center align-items-center">
                        <img src="~/Assets/Images/camera.png" alt="updatePicture">
                    </div>
                </div>
                <p class="username text-center my-4"></p>
            </div>
            <div class="sidebar-nav d-flex flex-column bg-white mt-4 rounded">
                <div class="myinfo d-flex align-items-center px-3 py-3 rounded focus">
                    <span class="iconify mr-2" data-icon="raphael:smallgear" data-inline="false"></span>
                    <p>會員資訊</p>
                </div>
                <div class="myticket d-flex align-items-center px-3 py-3">
                    <span class="iconify mr-2" data-icon="fa-solid:ticket-alt" data-inline="false"></span>
                    <p>我的票券</p>
                </div>
                <div class="wishlist d-flex align-items-center px-3 py-3">
                    <span class="iconify mr-2" data-icon="clarity:heart-solid" data-inline="false"></span>
                    <p>收藏票券</p>
                </div>
                <div class="wishlist-store d-flex align-items-center px-3 py-3">
                    <span class="iconify mr-2" data-icon="whh:house" data-inline="false"></span>
                    <p>收藏餐廳</p>
                </div>
                <div class="browsing d-flex align-items-center px-3 py-3 rounded">
                    <span class="iconify mr-2" data-icon="bi:eye-fill" data-inline="false"></span>
                    <p>瀏覽記錄</p>
                </div>
            </div>
        </div>
        <div class="col-9 info px-4 py-3">
        </div>
    </div>
</div>

<!-- modal -->
<div class="modal fade" id="editPassword" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">變更密碼</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="" class="d-flex flex-column align-items-center">
                    <div>
                        <label for="old-password">輸入舊密碼 : </label>
                        <input type="text" name="" id="old-password" class="form-control w-100 mb-3" required>
                        <label for="new-password">輸入新密碼 : </label>
                        <input type="text" name="" id="new-password" class="form-control w-100 mb-3" required>
                        <label for="check-password">確認新密碼 : </label>
                        <input type="text" name="" id="check-password" class="form-control w-100 mb-3" required>
                    </div>
                    <div class="mt-3">
                        <button type="button" class="btn btn-secondary mr-3" data-dismiss="modal">取消</button>
                        <input type="submit" value="儲存" class="btn btn-primary">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="showQRCode" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-3">
            <img class="w-50 m-auto" src="https://api.qrserver.com/v1/create-qr-code/?data=TicketHub!&size=150x150&color=23a8b2&margin=10" alt="QRCode"/>
            <p class="text-center mt-3">請掃描QRcode進行票券核銷</p>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/js/jquery")
@Scripts.Render("~/bundles/js/bootstrap")
@Scripts.Render("~/bundles/js/CustomerPage")

@section endJS{
    <script src="https://kit.fontawesome.com/bff1bb511a.js" crossorigin="anonymous"></script>
    <script type="module" src="~/Assets/JavaScript/Customer/CustomerInfo.js"></script>
}


