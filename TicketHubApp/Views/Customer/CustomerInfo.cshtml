@model TicketHubApp.Models.ViewModels.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout_Manage.cshtml";
}
@section topCSS{
    @Styles.Render("~/bundles/css/CustomerPage")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.min.css" integrity="sha512-zxBiDORGDEAYDdKLuYU9X/JaJo/DPzE42UubfBw9yg8Qvb2YRRIQ8v4KsGHOx2H1/+sdSXyXxLXv5r7tHc9ygg==" crossorigin="anonymous" />
}

<div id="notify"></div>

<!-- modal -->
<div class="modal fade" id="editPassword" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">變更密碼</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("ForgotPassword", "Account", null, FormMethod.Post, new { id = "forgotPassForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="input-group">
                            <span><span class="iconify" data-icon="mdi:account-circle" data-inline="false"></span> Account: @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })</span>
                            <input class="w-100 my-1" type="email" name="Email" id="cust-forgot-Email" placeholder="example@tickethub.com" data-val="true" data-val-required="required" />
                        </div>
                        <div class="input-group">
                            <span><span class="iconify" data-icon="ic:baseline-vpn-key" data-inline="false"></span> Password: </span>
                            <button id="reset-password" class="btn btn-cust w-100" type="submit" form="forgotPassForm">Send Reset Link</button>
                        </div>
                    }
            </div>
        </div>
    </div>
</div>

@*QRCode*@
<div class="modal fade" id="showQRCode" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-3">
            <img class="w-50 m-auto" src="https://api.qrserver.com/v1/create-qr-code/?data=TicketHub!&size=150x150&color=23a8b2&margin=10" alt="QRCode" />
            <p class="text-center">請掃描QRcode進行票券核銷</p>
        </div>
    </div>
</div>

@*picture*@
<div class="modal fade" id="imgChoppingArea" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog position-relative">
        <div class="loading-page position-absolute w-100 h-100 d-flex justify-content-center align-items-center rounded">
            <div class="text-center">
                <div class="spinner-border m-4" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <p class="w-100">資料儲存中，請稍候...</p>
            </div>
        </div>
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">編輯個人頭像</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="chopping-img" class="center-block"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">放棄編輯</button>
                <button type="button" id="cropImageBtn" class="btn btn-cust">確定</button>
            </div>
        </div>
    </div>
</div>

@section endJS{
    <script src="https://kit.fontawesome.com/bff1bb511a.js" crossorigin="anonymous"></script>
    <script type="module" src="~/Assets/JavaScript/Customer/CustomerInfo.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.min.js" integrity="sha512-Gs+PsXsGkmr+15rqObPJbenQ2wB3qYvTHuJO6YJzPe/dTLvhy0fmae2BcnaozxDo5iaF8emzmCZWbQ1XXiX2Ig==" crossorigin="anonymous"></script>
    <script src="~/Assets/JavaScript/Common/buzz.js"></script>
}


