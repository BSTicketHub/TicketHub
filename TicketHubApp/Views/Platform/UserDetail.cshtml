@model TicketHubApp.Models.ViewModels.PlatformUserViewModel
<link rel="stylesheet" type="text/css" href="~/Assets/CSS/Platform/Platform_UserDetail.min.css" />

<nav aria-label="breadcrumb" class="shadow">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Platform/Index">後台管理系統</a></li>
        <li class="breadcrumb-item"><a href="~/Platform/UserList">會員管理</a></li>
        <li class="breadcrumb-item active" aria-current="page">會員明細</li>
    </ol>
</nav>

<div class="shadow p-2">
    @using (Html.BeginForm("EditUser", "Platform", null, FormMethod.Post, new { id = "editUserForm"}))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @* 帳號(不可修改) *@
            <div class="form-group">
                @Html.LabelFor(model => model.UserAccount, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control text-box single-line" value=@Model.UserAccount disabled>
                    @Html.ValidationMessageFor(model => model.UserAccount, "", new { @class = "text-danger" })
                </div>
            </div>
            @* 會員名稱 (可修改) *@
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control text-box single-line" value=@Model.UserName name="UserName">
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            @* 會員電話 (可修改) *@
            <div class="form-group">
                @Html.LabelFor(model => model.Mobile, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control text-box single-line" value=@Model.Mobile name="Mobile">
                    @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                </div>
            </div>
            @* 會員性別 (可修改) *@
            <div class="form-group">
                @Html.LabelFor(model => model.Sex, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control text-box single-line" value=@Model.Sex name="Sex">
                    @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 p-3">
                    <input type="submit" value="儲存會員資料" class="btn btn-success">
                    @Html.ActionLink("查看該會員擁有票券", "GetTicketsBelongsToThisUser", new { id = Model.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("回到會員列表", "UserList", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    }
</div>

