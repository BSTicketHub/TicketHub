@{
    ViewBag.Title = "GetAllIssues";
}

<nav aria-label="breadcrumb" class="shadow">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Platform/Index">後台管理系統</a></li>
        <li class="breadcrumb-item"><a href="~/Platform/ShopList">商家管理</a></li>
        <li class="breadcrumb-item active" aria-current="page">商家發行票券列表</li>
    </ol>
</nav>

<div class="shadow p-3">
    <table id="issueTable" class="display" style="width:100%">
        <thead>
            <tr>
                <th>票券ID</th>
                <th>票券名稱</th>
                <th>發行時間</th>
                <th>上架日期</th>
                <th>下架日期</th>
                <th>售價</th>
                <th>發行張數</th>
                <th>已銷售數量</th>
                <th>總銷售額</th>
                <th>庫存</th>
            </tr>
        </thead>
    </table>
</div>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
<script>
    $(document).ready(function () {
        $('#issueTable').DataTable({
            "ajax": '../GetIssuessByShopJson/@ViewBag.id',
            "scrollX": true,
            "stateSave": true
        });

    });

    $("#issueTable").on("click", "tr", function () {

        let id = this.firstChild.innerText;
        this.setAttribute('data-toggle', 'modal');
        this.setAttribute('data-target', '#exampleModal');

        let modal = document.querySelector('#exampleModal');
        modal.querySelector('h5').innerText = "票券名稱 : ";
        modal.querySelector('.modal-body h5').innerText = "發行量 : ";
        modal.querySelector('.modal-body h5:nth-child(2)').innerText = "銷售量 : ";
        modal.querySelector('.modal-body h5:nth-child(3)').innerText = "銷售額 : ";

        fetch('../GetSalesDataByIssue/' + id)
            .then(response => response.json())
            .then(data => {
                if (data[0]) {
                    modal.querySelector('h5').innerText = "票券名稱 : " + data[0].Title;
                    modal.querySelector('.modal-body h5').innerText = "發行量 : " + data[0].Amount;
                    modal.querySelector('.modal-body h5:nth-child(2)').innerText = "銷售量 : " + data[0].SelledAmount;
                    modal.querySelector('.modal-body h5:nth-child(3)').innerText = "銷售額 : " + data[0].TotalRevenue;

                }
                else {
                    modal.querySelector('h5').innerText = "票券名稱 : " + this.querySelector('td:nth-child(2)').innerText;
                    modal.querySelector('.modal-body h5').innerText = "發行量 : " + this.querySelector('td:nth-child(7)').innerText;
                    modal.querySelector('.modal-body h5:nth-child(2)').innerText = "銷售量 : 0";
                    modal.querySelector('.modal-body h5:nth-child(3)').innerText = "銷售額 : 0";
                }
        });
    });
    
    function closeModal() {
        $('#exampleModal').modal('hide');
    }
</script>
