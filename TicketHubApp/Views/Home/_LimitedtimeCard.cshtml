@model TicketHubApp.Models.ViewModels.LimitedtimeViewModel

<div class="owl-item">
    <div class="">
        <a href="" target="">
            <img class="d-block w-100  img-md2" data-src="" alt="@Model.Title"
                 src="@Model.ImgPath">
        </a>
    </div>
    <div class="mt-3 card-text">
        <h5>優惠資訊 »</h5>
        <div class="d-flex tagBox tag-right">
            <div class="tag tag-blue">
                最新
            </div>
            <div class="tag tag-green">
                國旅卡
            </div>
        </div>
        <hr>
        <div class="ellipsish-50">
            <p class="ellipsis2">@Model.Memo</p>
        </div>
        <div class="review-score product-star">
            <span class="iconify" data-icon="bi:star-fill" data-inline="false"></span>
            <span class="iconify" data-icon="bi:star-fill" data-inline="false"></span>
            <span class="iconify" data-icon="bi:star-fill" data-inline="false"></span>
            <span class="iconify" data-icon="bi:star-fill" data-inline="false"></span>
            <span class="iconify" data-icon="bi:star-fill" data-inline="false"></span>
        </div>
        <div class="priceBox">
            <div class="price d-flex">
                <div class="original line-through ml-auto">$@Model.OriginalPrice</div>
                <div class="current">
                    $@Model.DiscountPrice<span class="t-09">起</span>
                </div>
            </div>
        </div>
        <button class="btn btn-block btn-info mt-2">查看細節</button>
    </div>
</div>
