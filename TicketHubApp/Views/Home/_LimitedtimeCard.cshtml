@model TicketHubApp.Models.ViewModels.LimitedtimeViewModel

<div class="item">
    <a href="../Home/Product/@Model.Id" class="product-img img-h-lg">
        <div class="product-img img-h-md">
            <img class="w-100" alt="@Model.Title" src="@Model.ImgPath">
        </div>
    </a>
    <div class="mt-3 card-text">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="m-0">優惠資訊 »</h5>
            <div class="d-flex">
                <div class="tag tag-blue">
                    最新
                </div>
                <div class="tag tag-green">
                    國旅卡
                </div>
            </div>
        </div>
        <hr>
        <h5>@Model.Title</h5>
        <p class="text-overflow-2">@Model.Memo</p>
        <div class="review-score product-star">
            <span class="iconify" data-icon="bi:star-fill" data-inline="false"></span>
            <span class="iconify" data-icon="bi:star-fill" data-inline="false"></span>
            <span class="iconify" data-icon="bi:star-fill" data-inline="false"></span>
            <span class="iconify" data-icon="bi:star-fill" data-inline="false"></span>
            <span class="iconify" data-icon="bi:star-fill" data-inline="false"></span>
        </div>
        <div class="d-flex justify-content-end">
            <span class="text-line-through text-sm-9 text-muted align-self-end">$@Model.OriginalPrice</span>
            <div class="currentPrice">
                <span class=" text-md-3 pl-2">$@Model.DiscountPrice</span>
                <span class=" text-sm-9">起</span>
            </div>
        </div>
        <button class="btn btn-cust w-100 mt-2" onclick="location.href='../Home/Product/@Model.Id'">查看細節</button>
    </div>
</div>
